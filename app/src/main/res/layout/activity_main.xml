<?xml version="1.0" encoding="utf-8"?>
<!--系统主页面-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#EDCCCCCC"
        android:visibility="visible" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:outlineAmbientShadowColor="@color/cardview_dark_background"
        android:background="#D1FBF7"
        app:tabSelectedTextColor="@color/cardview_dark_background">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/menu_commodity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:icon="@mipmap/ic_commodity"
            android:text="@string/menu_commodity" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/menu_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:icon="@mipmap/ic_add"
            android:text="@string/menu_add" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/menu_person"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:icon="@mipmap/ic_person"
            android:text="@string/menu_profile" />

    </com.google.android.material.tabs.TabLayout>


</RelativeLayout>