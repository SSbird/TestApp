<?xml version="1.0" encoding="utf-8"?>
<!--"我发布的"商品列表的商品子项布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/xui_config_color_75_white"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/item_self_image"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/price_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/item_self_image"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textColor="@color/xui_config_color_red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/hide_id_myItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="1sp"
        android:visibility="invisible" />

    <com.xuexiang.xui.widget.button.ButtonView
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:id="@+id/btn_delete"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:text="@string/action_delete_item"
        android:textSize="16sp"
        android:textAlignment="center"
        app:textRadius="2dp"
        app:textSelectedSolidColor="@color/menu_red_pressed"
        app:textSolidColor="@color/menu_red_normal" />

</RelativeLayout>